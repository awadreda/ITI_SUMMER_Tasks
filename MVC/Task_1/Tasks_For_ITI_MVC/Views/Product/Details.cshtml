@model Tasks_For_ITI_MVC.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="card">
        <img src="@Model.ImageUrl" class="card-img-top" style="height:300px; object-fit:cover;" />
        <div class="card-body">
            <h3 class="card-title">@Model.Name</h3>
            <p class="card-text"><strong>Price:</strong> @Model.Price EGP</p>
            <p>@Model.Description</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
