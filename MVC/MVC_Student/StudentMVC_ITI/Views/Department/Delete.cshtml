
@model StudentMVC_ITI.Models.ViewModels.DepartmentVM
@{
    ViewData["Title"] = "Delete";
}
<h3>Delete Department</h3>
<div class="alert alert-warning">Are you sure you want to delete this department?</div>
<form asp-action="Delete" method="post" class="card card-body">
    <input type="hidden" asp-for="Id" />
    <p><strong>@Model.Name</strong> - @Model.Location</p>
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </div>
</form>
