@model List<StudentMVC_ITI.Models.Department>

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Departments</h2>

    <table class="table table-bordered table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Location</th>
                <th>Manager</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.DeptId</td>
                <td>@dept.DeptName</td>
                <td>@dept.DeptDesc</td>
                <td>@dept.DeptLocation</td>
                <td>@dept.DeptManagerNavigation?.InsName</td> <!-- عرض اسم المدير بدل ID -->
            </tr>
        }
        </tbody>
    </table>

    <a asp-action="Add_Department" class="btn btn-success mt-3">
        <i class="bi bi-plus-circle"></i> Add Department
        
    </a>
</div>
