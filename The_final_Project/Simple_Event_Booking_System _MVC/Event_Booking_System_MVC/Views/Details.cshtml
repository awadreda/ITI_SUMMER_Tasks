@using Event_Booking_System_MVC.Models.ModelViews
@model EventDetailsViewModel
@{
    ViewData["Title"] = "Event Details";
    Layout = "_Layout";
}

<div class="card shadow p-4">
    <h3>@Model.Title</h3>
    <p><b>Date:</b> @Model.Date.ToString("dd MMM yyyy")</p>
    <p><b>Organizer:</b> @Model.OrganizerName</p>
    <p>@Model.Description</p>

    @if (!Model.UserHasBooked)
    {
        <a class="btn btn-success" asp-controller="Booking" asp-action="Book" asp-route-id="@Model.Id">Book</a>
    }
    else
    {
        <span class="badge bg-success">You have already booked this event</span>
    }

    <a class="btn btn-secondary ms-2" asp-action="Index">Back to Events</a>
</div>
