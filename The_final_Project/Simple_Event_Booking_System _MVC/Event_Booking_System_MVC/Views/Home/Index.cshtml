@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body text-center p-5">
                    <h2 class="card-title mb-4 fw-bold text-primary">
                        Welcome, @ViewBag.UserName! 🎉
                    </h2>
                    <p class="text-muted mb-4 fs-5">
                        This is your dashboard. What would you like to do today?
                    </p>

                    <div class="d-grid gap-3 col-12 col-md-8 mx-auto">
                        <a asp-controller="Event" asp-action="Index" 
                           class="btn btn-primary btn-lg shadow-sm">
                            📅 View All Events
                        </a>
                        <a asp-controller="Booking" asp-action="MyBookings" 
                           class="btn btn-success btn-lg shadow-sm">
                            🎟️ My Bookings
                        </a>
                        <a asp-controller="Account" asp-action="Logout" 
                           class="btn btn-outline-danger btn-lg shadow-sm">
                            🚪 Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
