@model IEnumerable<Event_Booking_System_MVC.Models.Event>

<div class="container py-5">
    <h2 class="mb-4">All Events</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">+ Create New Event</a>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Organizer</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Title</td>
                        <td>@e.Date.ToString("yyyy-MM-dd")</td>
                        <td>@e.OrganizerName</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-sm btn-info me-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-sm btn-success me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
